<Window x:Class="QUANLYBENHVIEN.Form_HoaDonVienPhi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Form_HoaDonVienPhi" Height="400" Width="420">
    <Grid>
        <GroupBox Header="Thông tin hóa đơn viện phí" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Margin="10" Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Bệnh nhân:" Margin="5"/>
                    <ComboBox x:Name="Cb_benhNhan" Grid.Row="0" Grid.Column="1" Margin="5"
                              DisplayMemberPath="HoTen" SelectedValuePath="MaBenhNhan"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Phòng bệnh:" Margin="5"/>
                    <ComboBox x:Name="Cb_phongBenh" Grid.Row="1" Grid.Column="1" Margin="5"
                              DisplayMemberPath="SoPhong" SelectedValuePath="MaPhong"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="Ngày nhập viện:" Margin="5"/>
                    <DatePicker x:Name="dp_ngayNhap" Grid.Row="2" Grid.Column="1" Margin="5"
                                SelectedDate="{x:Static sys:DateTime.Now}"/>

                    <Label Grid.Row="3" Grid.Column="0" Content="Ngày xuất viện:" Margin="5"/>
                    <DatePicker x:Name="dp_ngayXuat" Grid.Row="3" Grid.Column="1" Margin="5"
                                SelectedDate="{x:Static sys:DateTime.Now}"/>
                    
                    <Label Grid.Row="4" Grid.Column="0" Content="Thành tiền:" Margin="5"/>
                    <TextBlock x:Name="Tb_thanhTien" Grid.Row="4" Grid.Column="1" Margin="5"
                       VerticalAlignment="Center" FontWeight="Bold" Foreground="DarkRed"/>

                </Grid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" 
                            VerticalAlignment="Bottom" HorizontalAlignment="Right">
                    <Button Content="Xác nhận" Width="100" Height="25" Margin="10"
                            Click="Button_XacNhan_Click"/>
                    <Button Content="Hủy" Width="100" Height="25" Margin="10"
                            Click="Button_Huy_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
