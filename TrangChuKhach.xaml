<Page x:Class="QUANLYBENHVIEN.TrangChuKhach"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QUANLYBENHVIEN"
      mc:Ignorable="d" 
      d:DesignHeight="2000" d:DesignWidth="1800"
      Title="TrangChuKhach">

    <Page.Resources>    
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="HeroGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#64B5F6" Offset="0"/>
            <GradientStop Color="#42A5F5" Offset="0.3"/>
            <GradientStop Color="#2196F3" Offset="0.6"/>
            <GradientStop Color="#1976D2" Offset="1"/>
        </LinearGradientBrush>

        <!-- Search Box Style -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="50,15,20,15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#FFF176"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Grid>
                                <TextBlock Text="🔍" FontSize="20" 
                                          HorizontalAlignment="Left" VerticalAlignment="Center" 
                                          Margin="18,0,0,0" Foreground="#666666"/>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                            Margin="{TemplateBinding Padding}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Feature Card Style -->
        <Style x:Key="FeatureCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="5" Opacity="0.2" BlurRadius="15"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Specialty Card Style -->
        <Style x:Key="SpecialtyCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="3" Opacity="0.2" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Service Item Style -->
        <Style x:Key="ServiceItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Background="#F8F9FA">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Hero Section -->
            <Border Grid.Row="0" Background="{StaticResource HeroGradient}" Height="300">
                <Grid>
                    <!-- Background Image Effect -->
                    <Border Background="#E3F2FD" Opacity="0.3">
                        <TextBlock Text="🏥👨‍⚕️💊🔬" FontSize="100" HorizontalAlignment="Right" 
                                  VerticalAlignment="Center" Margin="0,0,100,0" Opacity="0.3"/>
                    </Border>

                    <!-- Hero Content -->
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="NỀN TẢNG Y TẾ" 
                                  FontSize="28" FontWeight="Bold" Foreground="White"
                                  HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="CHĂM SÓC SỨC KHỎE TOÀN DIỆN" 
                                  FontSize="36" FontWeight="Bold" Foreground="White"
                                  HorizontalAlignment="Center" Margin="0,0,0,40"/>

                    </StackPanel>
                </Grid>
            </Border>


            <!-- Services Section -->
            <Grid Grid.Row="2" Background="White" Margin="50,60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Popular Services -->
                <StackPanel Grid.Column="0" Margin="0,0,25,0">
                    <TextBlock Text="Dịch vụ phổ biến" FontSize="24" FontWeight="Bold" 
                              Foreground="#333333" Margin="0,0,0,30"/>

                    <Border Style="{StaticResource ServiceItemStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="🩺" FontSize="24" VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Khám tổng quát" FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock Text="Khám sức khỏe định kỳ toàn diện" FontSize="12" Foreground="#666666"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="→" FontSize="18" Foreground="#2196F3" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource ServiceItemStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="💉" FontSize="24" VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Tiêm chủng" FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock Text="Tiêm phòng các loại vaccine" FontSize="12" Foreground="#666666"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="→" FontSize="18" Foreground="#2196F3" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource ServiceItemStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="🔬" FontSize="24" VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Xét nghiệm" FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock Text="Xét nghiệm máu, nước tiểu, X-quang" FontSize="12" Foreground="#666666"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="→" FontSize="18" Foreground="#2196F3" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource ServiceItemStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="🏥" FontSize="24" VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Cấp cứu" FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock Text="Dịch vụ cấp cứu 24/7" FontSize="12" Foreground="#666666"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="→" FontSize="18" Foreground="#2196F3" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Health Tips -->
                <StackPanel Grid.Column="1" Margin="25,0,0,0">
                    <TextBlock Text="Mẹo sức khỏe" FontSize="24" FontWeight="Bold" 
                              Foreground="#333333" Margin="0,0,0,30"/>

                    <Border Background="#E8F5E8" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="💧 Uống đủ nước" FontSize="16" FontWeight="SemiBold" Foreground="#2E7D32"/>
                            <TextBlock Text="Nên uống ít nhất 2 lít nước mỗi ngày để duy trì sức khỏe tốt" 
                                      FontSize="12" Foreground="#388E3C" TextWrapping="Wrap" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#E3F2FD" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="🏃‍♂️ Tập thể dục" FontSize="16" FontWeight="SemiBold" Foreground="#1565C0"/>
                            <TextBlock Text="Dành ít nhất 30 phút mỗi ngày để tập thể dục giữ gìn sức khỏe" 
                                      FontSize="12" Foreground="#1976D2" TextWrapping="Wrap" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#FFF3E0" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="🥗 Ăn uống lành mạnh" FontSize="16" FontWeight="SemiBold" Foreground="#E65100"/>
                            <TextBlock Text="Tăng cường rau xanh, trái cây tươi trong bữa ăn hàng ngày" 
                                      FontSize="12" Foreground="#F57C00" TextWrapping="Wrap" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#F3E5F5" CornerRadius="10" Padding="20">
                        <StackPanel>
                            <TextBlock Text="😴 Ngủ đủ giấc" FontSize="16" FontWeight="SemiBold" Foreground="#6A1B9A"/>
                            <TextBlock Text="Ngủ từ 7-8 tiếng mỗi đêm để cơ thể được nghỉ ngơi và phục hồi" 
                                      FontSize="12" Foreground="#8E24AA" TextWrapping="Wrap" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Specialties Section -->
            <StackPanel Grid.Row="3" Background="White" Margin="50,0,50,60">
                <TextBlock Text="Chuyên khoa phổ biến" FontSize="32" FontWeight="Bold" 
                          Foreground="#333333" HorizontalAlignment="Center" Margin="0,0,0,50"/>

                <UniformGrid Columns="4" Margin="0,0,0,50">
                    <!-- Specialty Cards -->
                    <Border Style="{StaticResource SpecialtyCardStyle}" Height="200" >
                        <Grid>
                            <Rectangle Fill="#FF6B6B" RadiusX="10" RadiusY="10" Opacity="0.8"/>
                            <Border Background="Black" Opacity="0.3" CornerRadius="10"/>
                            <StackPanel VerticalAlignment="Bottom" Margin="20">
                                <TextBlock Text="♡" FontSize="40" Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock Text="Tim Mạch" FontSize="18" FontWeight="Bold" 
                                          Foreground="White" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource SpecialtyCardStyle}" Height="200">
                        <Grid>
                            <Rectangle Fill="#4ECDC4" RadiusX="10" RadiusY="10" Opacity="0.8"/>
                            <Border Background="Black" Opacity="0.3" CornerRadius="10"/>
                            <StackPanel VerticalAlignment="Bottom" Margin="20">
                                <TextBlock Text="🧠" FontSize="30" Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock Text="Thần Kinh" FontSize="18" FontWeight="Bold" 
                                          Foreground="White" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource SpecialtyCardStyle}" Height="200" >
                        <Grid>
                            <Rectangle Fill="#45B7D1" RadiusX="10" RadiusY="10" Opacity="0.8"/>
                            <Border Background="Black" Opacity="0.3" CornerRadius="10"/>
                            <StackPanel VerticalAlignment="Bottom" Margin="20">
                                <TextBlock Text="🦴" FontSize="30" Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock Text="Xương Khớp" FontSize="18" FontWeight="Bold" 
                                          Foreground="White" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource SpecialtyCardStyle}" Height="200" >
                        <Grid>
                            <Rectangle Fill="#96CEB4" RadiusX="10" RadiusY="10" Opacity="0.8"/>
                            <Border Background="Black" Opacity="0.3" CornerRadius="10"/>
                            <StackPanel VerticalAlignment="Bottom" Margin="20">
                                <TextBlock Text="🔬" FontSize="30" Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock Text="Xét Nghiệm" FontSize="18" FontWeight="Bold" 
                                          Foreground="White" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource SpecialtyCardStyle}" Height="200">
                        <Grid>
                            <Rectangle Fill="#FECA57" RadiusX="10" RadiusY="10" Opacity="0.8"/>
                            <Border Background="Black" Opacity="0.3" CornerRadius="10"/>
                            <StackPanel VerticalAlignment="Bottom" Margin="20">
                                <TextBlock Text="👶" FontSize="30" Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock Text="Nhi Khoa" FontSize="18" FontWeight="Bold" 
                                          Foreground="White" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource SpecialtyCardStyle}" Height="200" >
                        <Grid>
                            <Rectangle Fill="#FF9FF3" RadiusX="10" RadiusY="10" Opacity="0.8"/>
                            <Border Background="Black" Opacity="0.3" CornerRadius="10"/>
                            <StackPanel VerticalAlignment="Bottom" Margin="20">
                                <TextBlock Text="👩‍⚕️" FontSize="30" Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock Text="Sản Phụ Khoa" FontSize="18" FontWeight="Bold" 
                                          Foreground="White" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource SpecialtyCardStyle}" Height="200">
                        <Grid>
                            <Rectangle Fill="#A8E6CF" RadiusX="10" RadiusY="10" Opacity="0.8"/>
                            <Border Background="Black" Opacity="0.3" CornerRadius="10"/>
                            <StackPanel VerticalAlignment="Bottom" Margin="20">
                                <TextBlock Text="👁️" FontSize="30" Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock Text="Mắt" FontSize="18" FontWeight="Bold" 
                                          Foreground="White" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource SpecialtyCardStyle}" Height="200" >
                        <Grid>
                            <Rectangle Fill="#FFB3BA" RadiusX="10" RadiusY="10" Opacity="0.8"/>
                            <Border Background="Black" Opacity="0.3" CornerRadius="10"/>
                            <StackPanel VerticalAlignment="Bottom" Margin="20">
                                <TextBlock Text="🦷" FontSize="30" Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock Text="Răng Hàm Mặt" FontSize="18" FontWeight="Bold" 
                                          Foreground="White" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </UniformGrid>
            </StackPanel>

            
        </Grid>
    </ScrollViewer>
</Page>