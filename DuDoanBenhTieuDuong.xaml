<Page x:Class="QUANLYBENHVIEN.DuDoanBenhTieuDuong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QUANLYBENHVIEN"
        mc:Ignorable="d"
        Title="DuDoanBenhTieuDuong" Height="650" Width="600">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Top">

            <TextBlock Text="Nhập thông tin bệnh nhân"
                       FontSize="20" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Label Content="Số lần mang thai:"/>
            <TextBox x:Name="txtPregnancies"/>

            <Label Content="Glucose:"/>
            <TextBox x:Name="txtGlucose"/>

            <Label Content="Huyết áp:"/>
            <TextBox x:Name="txtBloodPressure"/>

            <Label Content="Độ dày da:"/>
            <TextBox x:Name="txtSkinThickness"/>

            <Label Content="Insulin:"/>
            <TextBox x:Name="txtInsulin"/>

            <Label Content="BMI:"/>
            <TextBox x:Name="txtBMI"/>

            <Label Content="Diabetes Pedigree Function:"/>
            <TextBox x:Name="txtDPF"/>

            <Label Content="Tuổi:"/>
            <TextBox x:Name="txtAge"/>

            <Button Content="Dự đoán"
                    Width="120" Height="40"
                    HorizontalAlignment="Center" Margin="0,20,0,0"
                    Click="BtnPredict_Click"/>

            <TextBlock x:Name="txtResult"
                       FontSize="16" FontWeight="Bold"
                       Foreground="DarkBlue"
                       TextAlignment="Center" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
