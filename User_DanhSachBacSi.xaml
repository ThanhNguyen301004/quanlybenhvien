<Page x:Class="QUANLYBENHVIEN.User_DanhSachBacSi"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QUANLYBENHVIEN"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="DanhSachBacSi">
    <Page.Resources>
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#2196F3" Offset="0"/>
            <GradientStop Color="#1976D2" Offset="1"/>
        </LinearGradientBrush>
        <local:ByteToImageConverter x:Key="ByteToImageConverter"/>
        <!-- Doctor Card Style -->
        <Style x:Key="DoctorCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="5" Opacity="0.2" BlurRadius="15"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Filter Button Style -->
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Filter Button Style -->
        <Style x:Key="ActiveFilterButtonStyle" BasedOn="{StaticResource FilterButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
        </Style>

        <!-- Search Box Style -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="40,12,15,12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Grid>
                                <TextBlock Text="🔍" FontSize="16" 
                                          HorizontalAlignment="Left" VerticalAlignment="Center" 
                                          Margin="15,0,0,0" Foreground="#999999"/>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                            Margin="{TemplateBinding Padding}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rating Style -->
        <Style x:Key="RatingStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Page.Resources>

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" Padding="30,10">
            <StackPanel>
                <TextBlock Text="DANH SÁCH BÁC SĨ" FontSize="32" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Tìm kiếm và chọn bác sĩ phù hợp với nhu cầu của bạn" 
                          FontSize="16" Foreground="#B8D4E3" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Filter and Search Section -->
        <Border Grid.Row="1" Background="White" Padding="50,30">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="5"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search Bar -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" x:Name="SearchTextBox" Style="{StaticResource SearchBoxStyle}" 
                             Text="Tìm kiếm bác sĩ theo tên..." Foreground="Gray" FontStyle="Italic"
                             GotFocus="SearchTextBox_GotFocus" LostFocus="SearchTextBox_LostFocus"
                             TextChanged="SearchTextBox_TextChanged"/>

                    <Button Grid.Column="1" Content="Tìm kiếm" Background="#2196F3" Foreground="White"
                            FontSize="14" FontWeight="SemiBold" Padding="25,12" Margin="10,0,0,0"
                            BorderThickness="0" Cursor="Hand" Height="50" Click="SearchButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="25" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <!-- Specialty Filter Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Chuyên khoa: " FontSize="14" FontWeight="SemiBold" 
                              Foreground="#666666" VerticalAlignment="Center" Margin="0,0,15,0"/>

                    <Button x:Name="BtnTatCa" Content="Tất cả" Style="{StaticResource ActiveFilterButtonStyle}" 
                            Click="FilterButton_Click" Tag=""/>
                    <Button x:Name="BtnTimMach" Content="Tim Mạch" Style="{StaticResource FilterButtonStyle}" 
                            Click="FilterButton_Click" Tag="Tim Mạch"/>
                    <Button x:Name="BtnThanKinh" Content="Thần Kinh" Style="{StaticResource FilterButtonStyle}" 
                            Click="FilterButton_Click" Tag="Thần Kinh"/>
                    <Button x:Name="BtnNhiKhoa" Content="Nhi Khoa" Style="{StaticResource FilterButtonStyle}" 
                            Click="FilterButton_Click" Tag="Nhi Khoa"/>
                    <Button x:Name="BtnSanPhuKhoa" Content="Sản Phụ Khoa" Style="{StaticResource FilterButtonStyle}" 
                            Click="FilterButton_Click" Tag="Sản Phụ Khoa"/>
                    <Button x:Name="BtnXuongKhop" Content="Xương Khớp" Style="{StaticResource FilterButtonStyle}" 
                            Click="FilterButton_Click" Tag="Xương Khớp"/>
                    <Button x:Name="BtnMat" Content="Mắt" Style="{StaticResource FilterButtonStyle}" 
                            Click="FilterButton_Click" Tag="Mắt"/>
                    <Button x:Name="BtnRangHamMat" Content="Răng Hàm Mặt" Style="{StaticResource FilterButtonStyle}" 
                            Click="FilterButton_Click" Tag="Răng Hàm Mặt"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Doctors List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" 
                      Padding="50,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Results Count -->
                <TextBlock x:Name="ResultsCountText" Grid.Row="0" Text="Tìm thấy 24 bác sĩ" 
                          FontSize="16" FontWeight="SemiBold" Foreground="#666666" 
                          Margin="15,0,0,20"/>

                <!-- Doctors Grid -->
                <ItemsControl x:Name="DoctorsItemsControl" Grid.Row="1">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource DoctorCardStyle}" MouseLeftButtonUp="DoctorCard_Click">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Doctor Avatar -->
                                    <Border Grid.Row="0" Width="100" Height="100" CornerRadius="50" 
                                            Background="#E3F2FD" HorizontalAlignment="Center" Margin="0,0,0,15">
                                        <Image Source="{Binding AnhDaiDien, Converter={StaticResource ByteToImageConverter}}"/>
                                    </Border>
                                    
                                    <!-- Doctor Name -->
                                    <TextBlock Grid.Row="1" Text="{Binding HoTen}" FontSize="18" FontWeight="Bold" 
                                              Foreground="#333333" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                                    <!-- Specialty -->
                                    <Border Grid.Row="2" Background="#E8F5E8" CornerRadius="15" Padding="10,5" 
                                            HorizontalAlignment="Center" Margin="0,0,0,10">
                                        <TextBlock Text="{Binding ChuyenKhoa}" FontSize="12" FontWeight="SemiBold" 
                                                  Foreground="#4CAF50"/>
                                    </Border>

                                    <!-- Rating -->
                                    <StackPanel Grid.Row="3" Style="{StaticResource RatingStyle}" 
                                               HorizontalAlignment="Center" Margin="0,0,0,10">
                                        <TextBlock Text="⭐⭐⭐⭐⭐" FontSize="14"/>
                                        <TextBlock Text=" (4.8)" FontSize="12" Foreground="#666666" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Contact Info -->
                                    <StackPanel Grid.Row="4" Margin="0,0,0,15">
                                        <Grid Margin="0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="📞" FontSize="12" Margin="0,0,8,0"/>
                                            <TextBlock Grid.Column="1" Text="{Binding SoDienThoai}" FontSize="12" 
                                                      Foreground="#666666" TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                        <Grid Margin="0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="✉️" FontSize="12" Margin="0,0,8,0"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Email}" FontSize="12" 
                                                      Foreground="#666666" TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Experience Badge -->
                                    <Border Grid.Row="5" Background="#FFF3E0" CornerRadius="8" Padding="8,4" 
                                            HorizontalAlignment="Left" VerticalAlignment="Top">
                                        <TextBlock Text="10+ năm kinh nghiệm" FontSize="10" FontWeight="SemiBold" 
                                                  Foreground="#FF9800"/>
                                    </Border>

                                    <!-- Action Buttons -->
                                    <Grid Grid.Row="6" Margin="0,15,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0" Content="Xem chi tiết" Background="Transparent" 
                                               Foreground="#2196F3" FontSize="12" FontWeight="SemiBold" 
                                               Padding="10,8" Margin="0,0,5,0" BorderThickness="1" 
                                               BorderBrush="#2196F3" Cursor="Hand"
                                               Click="ViewDetails_Click" CommandParameter="{Binding}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="20" 
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#E3F2FD"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                        <Button Grid.Column="1" Content="Đặt lịch" Background="#2196F3" 
                                               Foreground="White" FontSize="12" FontWeight="SemiBold" 
                                               Padding="10,8" Margin="5,0,0,0" BorderThickness="0" 
                                               Cursor="Hand" Click="BookAppointment_Click" 
                                               CommandParameter="{Binding}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="20" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#1976D2"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>

        <!-- Loading Indicator -->
        <Border x:Name="LoadingPanel" Grid.Row="2" Background="White" Opacity="0.8" 
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="⏳" FontSize="40" HorizontalAlignment="Center"/>
                <TextBlock Text="Đang tải danh sách bác sĩ..." FontSize="16" 
                          HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="#666666"/>
            </StackPanel>
        </Border>

        <!-- No Results Panel -->
        <Border x:Name="NoResultsPanel" Grid.Row="2" Background="White" 
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🔍" FontSize="60" HorizontalAlignment="Center" Opacity="0.5"/>
                <TextBlock Text="Không tìm thấy bác sĩ" FontSize="20" FontWeight="SemiBold"
                          HorizontalAlignment="Center" Margin="0,20,0,10" Foreground="#666666"/>
                <TextBlock Text="Vui lòng thử lại với từ khóa khác hoặc chọn chuyên khoa khác" 
                          FontSize="14" HorizontalAlignment="Center" Foreground="#999999"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>