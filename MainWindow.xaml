<Window x:Class="QUANLYBENHVIEN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterScreen"
        xmlns:local="clr-namespace:QUANLYBENHVIEN"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"

        Title="Quản Lý Bệnh Viện" Height="750" Width="1300">

    <Window.Resources>
        <Style TargetType="Button" x:Key="MenuButtonStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10,20,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E5467"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#34495E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho TextBlock header: uppercase, bold, với separator dưới -->
        <Style TargetType="TextBlock" x:Key="MenuHeaderStyle">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="20,20,20,5"/>
            <Setter Property="Text" Value="{Binding Text, RelativeSource={RelativeSource Self}}"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Sidebar được thiết kế lại: thêm khoảng cách, hover effects, separators giữa các nhóm để chuyên nghiệp và phù hợp với hệ thống y tế -->
        <StackPanel DockPanel.Dock="Left" Width="240" Background="#000000">
            <!-- Logo / Header: thêm border dưới để phân cách -->
            <Border Padding="20" BorderBrush="LightGray" BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Avatar hình tròn -->
                    <Ellipse Width="40" Height="40" Stroke="White" StrokeThickness="1" Margin="0,0,10,0">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="C:\Users\OS\source\repos\QUANLYBENHVIEN\QUANLYBENHVIEN\image\defaul_avatar.png"/>
                            <!-- ảnh avatar mặc định -->
                        </Ellipse.Fill>
                    </Ellipse>

                    <!-- Thông tin user -->
                    <StackPanel>
                        <TextBlock Text="🏥 BỆNH VIỆN" 
                       Foreground="White" 
                       FontSize="20" 
                       FontWeight="Bold"/>
                        <TextBlock  x:Name="txtUserName"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Border>


            <Button Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click_Dashboard">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="MonitorDashboard" Foreground="White" Width="20" Height="20" VerticalAlignment="Center"/>
                    <TextBlock Text="  TRANG CHỦ" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <Separator Margin="20,10,20,10" Background="LightGray"/>


            <!-- Nhóm QUẢN LÝ -->
            <TextBlock Text="QUẢN LÝ" Style="{StaticResource MenuHeaderStyle}"/>
            <Button Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click_QuanLyTaiKhoan">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Account" Foreground="White" Width="20" Height="20" VerticalAlignment="Center"/>
                    <TextBlock Text="  Quản Lý Tài Khoản" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click_QuanLyBenhNhan">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountHeart" Foreground="White" Width="20" Height="20" VerticalAlignment="Center"/>
                    <TextBlock Text="  Quản Lý Bệnh Nhân" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click_QuanLyBacSi">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Doctor" Foreground="White" Width="20" Height="20" VerticalAlignment="Center"/>
                    <TextBlock Text="  Quản Lý Bác Sĩ" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click_QuanLyLichHen">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Calendar" Foreground="White" Width="20" Height="20" VerticalAlignment="Center"/>
                    <TextBlock Text="  Quản Lý Lịch Hẹn" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click_QuanLyPhongBenh">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="BedOutline" Foreground="White" Width="20" Height="20" VerticalAlignment="Center"/>
                    <TextBlock Text="  Quản Lý Phòng Bệnh" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click_QuanLyHoaDonVienPhi">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FileDocument" Foreground="White" Width="20" Height="20" VerticalAlignment="Center"/>
                    <TextBlock Text="  Quản Lý Hóa Đơn Viện Phí" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Separator giữa các nhóm -->
            <Separator Margin="20,10,20,10" Background="LightGray"/>

            <!-- Nhóm BÁO CÁO -->
            <TextBlock Text="BÁO CÁO" Style="{StaticResource MenuHeaderStyle}"/>
            <Button Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click_ThongKeDoanhThu">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ChartBar" Foreground="White" Width="20" Height="20" VerticalAlignment="Center"/>
                    <TextBlock Text="  Thống Kê Doanh Thu" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click_LichSuHoaDon">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="History" Foreground="White" Width="20" Height="20" VerticalAlignment="Center"/>
                    <TextBlock Text="  Lịch Sử Hóa Đơn" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Separator Margin="20,10,20,10" Background="LightGray"/>

            <TextBlock Text="IN ẤN" Style="{StaticResource MenuHeaderStyle}"/>
            <Button Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click_InHoaDon">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Printer" Foreground="White" Width="20" Height="20" VerticalAlignment="Center"/>
                    <TextBlock Text="  In Hóa Đơn" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <StackPanel Height="Auto">
                <Separator Margin="20,10,20,10" Background="LightGray"/>
            </StackPanel>
            <StackPanel VerticalAlignment="Bottom">
                <Button Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click_Logout">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Logout" Foreground="White" Width="20" Height="20" VerticalAlignment="Center"/>
                        <TextBlock Text="  Đăng Xuất" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            <!-- Separator -->
            
            
        </StackPanel>

        <!-- Main content: giữ nguyên -->
        <Grid Background="#F5F7FA">
            <Frame x:Name="frameContent" NavigationUIVisibility="Hidden"/>
        </Grid>
    </DockPanel>
</Window>