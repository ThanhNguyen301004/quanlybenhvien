        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập"
        Height="500" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA" ResizeMode="NoResize">
    <Window.Resources>
        <!-- Bảng màu -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#0EA5E9"/>
        <SolidColorBrush x:Key="PrimaryBrushDark" Color="#0369A1"/>
        <SolidColorBrush x:Key="Neutral900" Color="#1F2937"/>
        <SolidColorBrush x:Key="Neutral600" Color="#4B5563"/>
        <SolidColorBrush x:Key="Neutral200" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="FieldBg" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="CardBg" Color="White"/>

        <!-- Nút chính -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="8,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrushDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Nút link -->
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!-- Ô nhập với icon trái -->
        <Style x:Key="InputBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="{StaticResource FieldBg}"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!-- Card -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="3" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.2*"/>
            <ColumnDefinition Width="2.8*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel thương hiệu -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0EA5E9" Offset="0"/>
                    <GradientStop Color="#0369A1" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <StackPanel VerticalAlignment="Center" Margin="40">
                <Border Width="72" Height="72" Background="#FFFFFF22" CornerRadius="16" HorizontalAlignment="Left">
                    <Viewbox Stretch="Uniform">
                        <Grid>
                            <Rectangle Width="22" Height="56" Fill="White" RadiusX="4" RadiusY="4" HorizontalAlignment="Center"/>
                            <Rectangle Width="56" Height="22" Fill="White" RadiusX="4" RadiusY="4" VerticalAlignment="Center"/>
                        </Grid>
                    </Viewbox>
                </Border>

                <TextBlock Text="Hệ thống Quản lý Bệnh viện"
                           FontSize="22" FontWeight="SemiBold"
                           Foreground="White" Margin="0,16,0,4"/>
                <TextBlock Text="An toàn - Chính xác - Nhanh chóng"
                           FontSize="14" Foreground="#FFFFFFCC"/>
            </StackPanel>
        </Grid>

        <!-- Card đăng nhập -->
        <Border Grid.Column="1" Style="{StaticResource CardStyle}" Width="420" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Đăng nhập"
                           FontSize="24" FontWeight="Bold"
                           Foreground="{StaticResource Neutral900}"
                           HorizontalAlignment="Center" Margin="0,0,0,4"/>
                <TextBlock Text="Vui lòng nhập tài khoản để tiếp tục"
                           FontSize="13" Foreground="{StaticResource Neutral600}"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <ComboBox x:Name="Cbb_loaiTaiKhoan" Width="200">
                    <ComboBoxItem Content="Khách" IsSelected="True"/>
                    <ComboBoxItem Content="Quản trị viên"/>
                </ComboBox>
                <!-- Tài khoản -->
                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="Tài khoản" Foreground="{StaticResource Neutral600}" FontSize="12" Margin="2,0,0,6"/>
                    <Border Style="{StaticResource InputBorderStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xE77B;"
                                       Foreground="{StaticResource Neutral600}"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBox x:Name="Tb_taiKhoan"
                                     Grid.Column="1" Height="40" FontSize="14"
                                     Padding="4" Background="Transparent" BorderThickness="0"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Mật khẩu -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Mật khẩu" Foreground="{StaticResource Neutral600}" FontSize="12" Margin="2,0,0,6"/>
                    <Border Style="{StaticResource InputBorderStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xE72E;"
                                       Foreground="{StaticResource Neutral600}"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <PasswordBox x:Name="Tb_matKhau"
                                         Grid.Column="1" Height="40" FontSize="14"
                                         Padding="4" Background="Transparent" BorderThickness="0"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Hàng hành động phụ -->
                <DockPanel Margin="0,0,0,12">
                    <CheckBox Content="Nhớ tôi" Foreground="{StaticResource Neutral600}" FontSize="12" />
                    <TextBlock Text="Quên mật khẩu?" Foreground="{StaticResource PrimaryBrush}"
                               FontSize="12" Cursor="Hand" DockPanel.Dock="Right"/>
                </DockPanel>

                <!-- Nút đăng nhập -->
                <Button Content="Đăng nhập"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Button_Click_DangNhap"/>

                <!-- Liên kết đăng ký -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                    <TextBlock Text="Chưa có tài khoản?" Foreground="{StaticResource Neutral600}" FontSize="12" Margin="0,0,6,0"/>
                    <Button Content="Đăng ký" Style="{StaticResource LinkButtonStyle}" Click="Button_Click_DangKy"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
