<Page x:Class="QUANLYBENHVIEN.QuanLyLichHen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:local="clr-namespace:QUANLYBENHVIEN"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuanLyLichHen">

    <Grid Background="#F5F7FA" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="QUẢN LÝ LỊCH HẸN" 
                   FontSize="26" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0 10 0 20"/>

        <StackPanel Grid.Row="1">

            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Width="50" Height="35" Grid.Column="0" Background="#00cc00" Click="Btn_Them_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Add" Foreground="White" Width="20" Height="20"/>
                    </StackPanel>
                </Button>

                <!-- Combobox ngay trước TextBox -->
                <ComboBox x:Name="ComboBox_TimKiem" Grid.Column="2" Width="200" SelectedIndex="0" Margin="0 0 10 0">
                    <ComboBoxItem Content="Bệnh nhân"/>
                    <ComboBoxItem Content="Bác sĩ"/>
                    <ComboBoxItem Content="Ngày hẹn"/>
                    <ComboBoxItem Content="Mục đích"/>
                    <ComboBoxItem Content="Trạng thái"/>
                </ComboBox>

                <!-- TextBox tìm kiếm -->
                <TextBox x:Name="Tb_timKiem" Grid.Column="3" Width="200" Height="30"
             VerticalAlignment="Center" Padding="5"
             Text="Tìm kiếm..."
             Foreground="Gray"
             GotFocus="TextBox_GotFocus"
             LostFocus="TextBox_LostFocus"/>

                <!-- Nút tìm kiếm -->
                <Button Width="50" Height="35" Grid.Column="4" Click="Button_TimKiem_Click" Margin="5 0 0 0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Magnify" Foreground="White" Width="20" Height="20"/>
                    </StackPanel>
                </Button>
            </Grid>

            <DataGrid x:Name="DG_LichHen" AutoGenerateColumns="False" 
                      CanUserAddRows="False" IsReadOnly="True"
                      SelectionMode="Extended" SelectionUnit="FullRow"
                      Margin="0" 
                      HeadersVisibility="Column"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã Lịch Hẹn" Binding="{Binding MaLichHen}" Width="*"/>
                    <DataGridTextColumn Header="Bệnh Nhân" Binding="{Binding BENHNHAN.HoTen}" Width="*"/>
                    <DataGridTextColumn Header="Bác Sĩ" Binding="{Binding BACSI.HoTen}" Width="*"/>
                    <DataGridTextColumn Header="Ngày Hẹn" Binding="{Binding NgayHen, StringFormat=dd/MM/yyyy}" Width="*"/>
                    <DataGridTextColumn Header="Mục Đích" Binding="{Binding MucDich}" Width="*"/>
                    <DataGridTextColumn Header="Email liên hệ" Binding="{Binding Email}" Width="*"/>
                    <DataGridTextColumn Header="Trạng Thái" Binding="{Binding TrangThai}" Width="*"/>

                    <DataGridTemplateColumn Header="Thao tác" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Background="#ff9900" Width="50" Height="35" Margin="2"
                                            Tag="{Binding MaLichHen}"
                                            Click="Btn_Sua_Row_Click">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="Pencil" Foreground="White" Width="16" Height="16" />

                                        </StackPanel>
                                    </Button>

                                    <Button Background="#cc0000" Width="50" Height="35" Margin="2"
                                            Tag="{Binding MaLichHen}"
                                            Click="Btn_Xoa_Row_Click">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="TrashCan" Foreground="White" Width="16" Height="16" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
