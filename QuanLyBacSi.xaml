﻿<Page x:Class="QUANLYBENHVIEN.QuanLyBacSi"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:QUANLYBENHVIEN"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuanLyBacSi">
    <Page.Resources>
        <local:ByteToImageConverter x:Key="ByteToImageConverter"/>
    </Page.Resources>

    <Grid Background="#F5F7FA" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="QUẢN LÝ BÁC SĨ" 
                   FontSize="26" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0 10 0 20"/>

        <StackPanel Grid.Row="1">

            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Width="50" Height="35" Grid.Column="0" Background="#00cc00" Click="Btn_Them_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Add" Foreground="White" Width="20" Height="20"/>
                    </StackPanel>
                </Button>

                <!-- Combobox ngay trước TextBox -->
                <ComboBox x:Name="ComboBox_TimKiem" Grid.Column="2" Width="200" SelectedIndex="0" Margin="0 0 10 0">
                    <ComboBoxItem Content="Họ tên"/>
                    <ComboBoxItem Content="Chuyên Khoa"/>
                    <ComboBoxItem Content="Số Điện Thoại"/>
                    <ComboBoxItem Content="Email"/>
                </ComboBox>

                <!-- TextBox tìm kiếm -->
                <TextBox x:Name="Tb_timKiem" Grid.Column="3" Width="200" Height="30"
             VerticalAlignment="Center" Padding="5"
             Text="Tìm kiếm..."
             Foreground="Gray"
             GotFocus="TextBox_GotFocus"
             LostFocus="TextBox_LostFocus"/>

                <!-- Nút tìm kiếm -->
                <Button Width="50" Height="35" Grid.Column="4" Click="Button_TimKiem_Click" Margin="5 0 0 0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Magnify" Foreground="White" Width="20" Height="20"/>
                    </StackPanel>
                </Button>
            </Grid>


            <DataGrid x:Name="DG_BacSi" AutoGenerateColumns="False" 
                      SelectionMode="Extended" SelectionUnit="FullRow"
                      CanUserAddRows="False" IsReadOnly="True"
                      Margin="0" 
                      HeadersVisibility="Column"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="Mã Bác Sĩ" Binding="{Binding MaBacSi}" Width="*"/>
                    <DataGridTextColumn Header="Họ Tên" Binding="{Binding HoTen}" Width="*"/>
                    <DataGridTextColumn Header="Chuyên Khoa" Binding="{Binding ChuyenKhoa}" Width="*"/>
                    <DataGridTextColumn Header="SĐT" Binding="{Binding SoDienThoai}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                    <DataGridTemplateColumn Header="Ảnh đại diện" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Width="80" Height="80" 
                   Source="{Binding AnhDaiDien, Converter={StaticResource ByteToImageConverter}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>



                    <DataGridTemplateColumn Header="Thao tác" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Background="#ff9900" Width="50" Height="35" Margin="2"
                                            Tag="{Binding MaBacSi}"
                                            Click="Btn_Sua_Row_Click">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="Pencil" Foreground="White" Width="16" Height="16" />

                                        </StackPanel>
                                    </Button>

                                    <Button Background="#cc0000" Width="50" Height="35" Margin="2"
                                            Tag="{Binding MaBacSi}"
                                            Click="Btn_Xoa_Row_Click">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="TrashCan" Foreground="White" Width="16" Height="16" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
